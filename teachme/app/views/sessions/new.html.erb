<h1>Log in</h1>
<%= form_tag sessions_path do %>
<p>
<%= label_tag :email %>
<%= text_field_tag :email, required: true %>
</p>
<p>
<%= label_tag :password %>
<%= password_field_tag :password, required: true %>
</p>
<p>
<%= submit_tag 'Log in' %>
</p>
<% end %>

<%= link_to 'Sign up', new_user_path(@user) %>
